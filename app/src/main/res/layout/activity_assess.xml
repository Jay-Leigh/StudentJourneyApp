<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AssessActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gback"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="37dp" />


    <Button
        android:id="@+id/button11"
        android:layout_width="304dp"
        android:layout_height="76dp"
        android:backgroundTint="#D8D8D8"
        android:foregroundTint="#D8D8D8"
        android:text="Assignment With Dates"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374" />

    <Button
        android:id="@+id/button12"
        android:layout_width="304dp"
        android:layout_height="76dp"
        android:backgroundTint="#D8D8D8"
        android:foregroundTint="#D8D8D8"
        android:text="Assignment With Dates"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.374" />

    <Button
        android:id="@+id/button13"
        android:layout_width="304dp"
        android:layout_height="76dp"
        android:backgroundTint="#D8D8D8"
        android:foregroundTint="#D8D8D8"
        android:text="@string/assignment_with_dates"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <Button
        android:id="@+id/button14"
        android:layout_width="304dp"
        android:layout_height="76dp"
        android:backgroundTint="#D8D8D8"
        android:foregroundTint="#D8D8D8"
        android:text="Assignment With Dates"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.654" />

    <Button
        android:id="@+id/button15"
        android:layout_width="304dp"
        android:layout_height="76dp"
        android:backgroundTint="#D8D8D8"
        android:foregroundTint="#D8D8D8"
        android:text="Assignment With Dates"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="353dp"
        android:layout_height="106dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="353dp"
            android:layout_height="106dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:srcCompat="@drawable/bassess" />

        <Button
            android:id="@+id/button5"
            android:layout_width="353dp"
            android:layout_height="106dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="ASSESSMENTS"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="non"
            android:textSize="30sp"
            android:textStyle="bold"
            app:iconPadding="0dp"
            app:iconTint="#FFFFFF"
            tools:visibility="visible" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Nav"
            android:layout_marginBottom="150dp"
            android:background="@drawable/stadioline"
            android:translationY="150dp"
            app:layout_constraintEnd_toStartOf="@+id/Nav" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/Nav"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/lgrey"
            app:menu="@menu/bttmnav" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="55dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/assess"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>