            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            app:iconPadding="0dp"
            app:iconTint="#FFFFFF"
            tools:visibility="visible" />
    </androidx.cardview.widget.CardView>

